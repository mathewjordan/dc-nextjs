{
  "_source": {
    "includes": [
      "id",
      "descriptiveMetadata.title",
      "model",
      "representativeFileSet.url",
      "title",
      "workType"
    ],
    "excludes": []
  },
  "query": {
    "bool": {
      "must": [
        {
          "bool": {
            "must": [
              {
                "bool": {
                  "should": [
                    {
                      "terms": {
                        "descriptiveMetadata.subject.term.label.keyword": [
                          "Buddhist art"
                        ]
                      }
                    }
                  ]
                }
              },
              { "bool": { "must": [{ "match": { "model.name": "Work" } }] } }
            ]
          }
        }
      ]
    }
  },
  "size": 24,
  "aggs": {
    "descriptiveMetadata.subject.term.label.keyword": {
      "terms": {
        "field": "descriptiveMetadata.subject.term.label.keyword",
        "size": 250,
        "order": { "_count": "desc" }
      }
    }
  }
}
