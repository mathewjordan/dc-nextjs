{
  "_source": [
    "accessionNumber",
    "id",
    "iiifManifest",
    "title",
    "thumbnail",
    "workType.label"
  ],
  "query": {
    "bool": {
      "must": [
        { "bool": { "must": [{ "match": { "model.name": "Work" } }] } },
        {
          "bool": {
            "must": [
              {
                "terms": {
                  "descriptiveMetadata.subject.term.label.keyword": [
                    "Buddhist art"
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  },
  "size": 20,
  "aggs": {
    "subject": {
      "terms": {
        "field": "descriptiveMetadata.subject.term.label.keyword",
        "size": 20,
        "order": { "_count": "desc" }
      }
    }
  }
}
